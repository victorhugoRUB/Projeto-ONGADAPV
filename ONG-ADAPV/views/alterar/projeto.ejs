<script src="/js/alterar/projeto.js"></script>
<div class="container">
    <div class="container-fluid">

        <h1 class="h3 mb-4 text-gray-800">Alterar Projeto</h1>
        <% if (typeof msg != "undefined") { %>
            <span><%= msg %></span>
        <% } %>

        <input id="id" hidden value="<%= projeto.pro_id %>">
        <input id="createdAt" hidden value="<%= projeto.createdAt %>">

        <div class="col-md-6">
            <label for="nomePro" class="form-label">Nome do Projeto<span class="text-danger">*</span></label>
            <input type="text" value="<%= projeto.pro_nome %>" name="nomePro" class="form-control" id="nomePro" placeholder="Digite o nome do projeto">
        </div>

        <div class="col-md-6">
            <label for="dataPro" class="form-label">Data do Projeto<span class="text-danger">*</span></label>
            <input type="text" value="<%= projeto.pro_data %>" name="dataPro" class="form-control" id="dataPro" placeholder="aaaa-mm-dd">
        </div>

        <div class="col-md-6">
            <label for="descPro" class="form-label">Descrição do Projeto<span class="text-danger">*</span></label>
            <input type="text" value="<%= projeto.pro_desc %>" name="descPro" class="form-control" id="descPro" placeholder="Dê uma descrição para o projeto">
        </div>

        <br>
        <br>

        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnAlterar">Salvar</button>
            <a class="btn btn-secondary px-3 py-3" href="/projeto/listar">Cancelar</a>
        </div>

    </div>
</div>