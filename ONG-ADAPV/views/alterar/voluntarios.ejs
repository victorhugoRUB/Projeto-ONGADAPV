<script src="/js/alterar/voluntarios.js"></script>
<div class="container">

    <div class="container-fluid">
        
        <input id="id" hidden value="<%= voluntario.vol_id %>">
        <input id="createdAt" hidden value="<%= voluntario.createdAt %>">
        <h1 class="h3 mb-4 text-gray-800">Registrar Voluntários</h1>
        <% if (typeof msg != "undefined") {%>
            <span><%= msg %></span>
        <% } %>

        <div class="col-md-6">
            <label for="idVolun" class="form-label">Nome do voluntário<span class="text-danger">*</span></label>
            <select name="idVolun" id="idVolun">
                <% listaPessoa.forEach(function(pessoas) { %>
                    <option value="<%= pessoas.pess_id%>" <%= pessoas.pess_id === voluntario.pess_id ? "selected" : "" %>>NOME: <%= pessoas.pess_nome, %> - CPF: <%= pessoas.pess_cpf %> </option>
                <% }); %>
            </select>
        </div>
        <br><br>
        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnAlterar">Salvar</button>
            <button type="button" class="btn btn-secondary px-3 py-3" id="cancelar">Cancelar</button>
        </div>

    </div>

</div>