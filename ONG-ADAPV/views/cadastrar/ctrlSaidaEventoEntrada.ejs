<script src="/js/cadastrar/ctrlSaidaEvento.js"></script>
<div class="container">
    <div class="container-fluid">

        <h1 class="h3 mb-4 text-gray-800">Registrar Controle de saída de evento</h1>
        <% if (typeof msg != "undefined") { %>
            <span><%= msg %></span>
        <% } %>

        <div class="col-md-6">
            <label for="even_id" class="form-label">Evento<span class="text-danger">*</span></label>
            <select disabled name="even_id" class="form-control" id="even_id">
                <option value="" selected>Selecione...</option>
                <% listaEvento.forEach(function(evento) { %>
                    <option value="<%= evento.even_id %>" <%= evento.even_id === ctrlEven.even_id ? "selected" : "" %> >NOME: <%= evento.even_nome %> - DATA DE INÍCIO: <%= evento.even_dataInicio.toLocaleDateString('pt-BR')%></option>
                <% }); %>
            </select>
        </div>

        <div class="col-md-6">
            <label for="ctrlEven_desc" class="form-label">Descrição sobre o controle<span class="text-danger">*</span></label>
            <input type="text" value="<%= ctrlEven.ctrlEven_desc %>" name="ctrlEven_desc" class="form-control" id="ctrlEven_desc" placeholder="Digite a descrição do evento">
        </div>

        <div class="col-md-6">
            <label for="ctrlEven_estado" class="form-label">Registro de saída ou entrada?<span class="text-danger">*</span></label>
            <select disabled name="ctrlEven_estado" id="ctrlEven_estado" class="form-control">
                <option disabled value="">Selecione...</option>
                <option disabled value="Saida">Saída</option>
                <option value="Entrada" selected >Entrada</option>
            </select>
        </div>

        <div class="col-md-6">
            <label for="prod_id" class="form-label">Produto Entrada/Saída<span class="text-danger">*</span></label>
            <select name="prod_id" id="prod_id" class="form-control">
                <option value="" selected>Selecione...</option>
                <% listaProduto.forEach(function(produto) { %>
                    <option value="<%= produto.prod_id %>" <%= produto.prod_id === ctrlEven.prod_id ? "selected" : "" %> >NOME: <%= produto.prod_nome %> - TIPO: <%= produto.prod_tipo%></option>
                <% }); %>
            </select>
        </div>

        <div class="col-md-6">
            <label for="prod_qnt" class="form-label">Quantidade de produtos<span class="text-danger">*</span></label>
            <input value="<%= ctrlEven.prod_qnt %>" type="number" name="prod_qnt" class="form-control" id="prod_qnt" placeholder="Digite a quantidade de saída">
        </div>

        <div class="col-md-6">
            <label for="patrim_valor" class="form-label">Valor em dinheiro<span class="text-danger">*</span></label>
            <input value="<%= ctrlEven.patrim_valor %>" type="text" name="patrim_valor" class="form-control" id="patrim_valor" placeholder="Digite o valor em dinheiro">
        </div>

        <div class="col-md-6">
            <label for="ani_id" class="form-label">Nome do animal<span class="text-danger">*</span></label>
            <select name="ani_id" id="ani_id" class="form-control">
                <option value="" selected>Selecione...</option>
                <% listaAnimal.forEach(function(animal) { %>
                    <option value="<%= animal.ani_id %>" <%= animal.ani_id === ctrlEven.ani_id ? "selected" : "" %> >NOME: <%= animal.ani_nome %> - RAÇA: <%= animal.ani_raca%></option>
                <% }); %>
            </select>
        </div>

        <br>
        <br>

        <div class="col-12">
            <button type="button" class="btn btn-success px-4 py-3" id="btnCadastrar">Salvar</button>
            <button type="button" class="btn btn-secondary px-3 py-3" id="cancelar">Cancelar</button>
        </div>

    </div>
</div>